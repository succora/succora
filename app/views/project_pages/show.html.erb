<div class="container">

<p id="notice"><%= notice %></p>
<div class="page-header">
<h1><%= @project_page.title %></h1>
<h3><%= @project_page.subtitle %></h3>
</div>

<div class="row">
	<div class="col-md-8">
  <%= @project_page.description %>
  <br>
  <br>
  <%= link_to 'Edit', edit_project_page_path(@project_page) %> |
<%= link_to 'Back', project_pages_path %>
	</div>

	<div class="col-md-3">
		<div class="panel panel-success">
			<div id="backing">
    <ul>
      <li class="stats" id="backers">
        <span>backers</span>
      </li>
      <li class="stats">
        
        <span>goal amount</span>
      </li>

      <% if %>
        <li class="stats" id="days">
          
          <span>date finished</span>
        </li>
      <% else %>
        <li class="stats" id="days">
            &infin;
            <span>days left</span>
          </li>
      <% end %>
    </ul>
    
    <div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
    60%
  </div>
</div>
    
    <div id="reserve_container">
      
      <%= link_to "Support", preorder_checkout_path, class: "btn btn-success btn-block" %>
      
      
      <%= like_button %>
    </div>
  </div>
</div>
</div>




</div>