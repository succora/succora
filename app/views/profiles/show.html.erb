<div class="container">
	<div class="page-header">
	</div>
	<div id="username" class="page-header">
	 <h1><%= "Hi " + @user.first_name + "!" %></h1>
	</div>
	 <div class="alert alert-success">Here's whats been happening since we saw you last...</div>


<div class="row">

	<div class="col-md-2">
		<div class="well">
			<ul class="nav nav-pills nav-stacked">
			  <li> <%= link_to "Create Project", new_project_path %></li>
			  <li><%= link_to "New Status", new_status_path %></li>
			  <li><%= link_to "Edit Project", edit_project_path %></li>
			</ul>
		</div>
		</div>

	<div class="col-md-8">
		<% if @projects %>
			<% @projects.each do |project| %>
			<div class="well">
				<h2><%= project.title %></h2>
				<h3><%= project.subtitle %></h3>
				<%= project.description %>
				<hr />
				<%= link_to time_ago_in_words(project.created_at), project_path(project) %> ago
			</div>
			<% end %>
			<% end %>
	</div>

<div class="col-md-2">
	<% if @statuses %>
			<% @statuses.each do |status| %>
			<div class="well">
				<%= status.content %>
				<hr />
				<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
			</div>
			<% end %>
			<% end %>
	</div>
</div>
</div>
</div>
			

