<div class="container">
	<div class="page-header">
	</div>
	<div class="page-header">
	 <h1><%= "Hi " + @user.first_name + "!" %>
		<div class="btn-group btn-croup-sm pull-right">
		  <%= link_to "Create Project", new_project_path, class: "btn btn-success" %>
		  <%= link_to "New Status", new_status_path, class: "btn btn-success" %>
		  <%= link_to "Edit Project", edit_project_path, class: "btn btn-success" %>
		  <button type="button" class="btn btn-success">Promote Project</button>
		</div>
	</div>

<div class="row">
	<div class="col-md-8">
	<div class="page-header">
		<h1>Current project</h1>
		<% if @projects %>
			<% @projects.each do |project| %>
			<div class="well">
				<h2><%= project.title %></h2>
				<h3><%= project.subtitle %></h3>
				<%= project.description %>
				<hr />
				<%= link_to time_ago_in_words(project.created_at), project_path(project) %> ago
			</div>
			<% end %>
			<% end %>
	</div>
	</div>

<div class="page-header">
		<h2>Notifications</h2>
<div class="col-md-3">
	<% if @statuses %>
			<% @statuses.each do |status| %>
			<div class="well">
				<%= status.content %>
				<hr />
				<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
			</div>
			<% end %>
			<% end %>
	</div>
</div>
</div>
</div>
			

