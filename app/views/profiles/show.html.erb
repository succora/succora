<div class="container">
	<div class="page-header">
	<h1><%= "Hi " + @user.first_name + "!" %>


				<div class="btn-group pull-right">
				  <%= link_to "Create Project", new_project_path, class: "btn btn-success" %>
				  <button type="button" class="btn btn-success">Notifications</button>
				  <button type="button" class="btn btn-success">Edit project</button>
				  <button type="button" class="btn btn-success">Promote Project</button>
				</div>
			</div>

	<div class="page-header">
		<h1>Current project</h1>
	</div>

	<div class="page-header">
		<h1>Notifications</h1>
	</div>
	<% if @statuses %>
			<% @statuses.each do |status| %>
			<div class="well">
				<%= status.content %>
				<hr />
				<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
			</div>
			<% end %>
			<% end %>
</div>
			

