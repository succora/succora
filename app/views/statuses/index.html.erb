<div class="container">
  <div class="page-header">
  </div>

<div class="row">
  <div class="page-header">
    <h1> Statuses </h1>
  </div>
  
</div>

    <%= link_to "New status", new_status_path, class: "btn btn-success btn-lg pull-right" %>
  


<% @statuses.each do |status| %>
      <div class="status">
        <div class="row">

        <div class="col-md-2">
          <%= image_tag "newlogo.png" %>
        </div>

        <div class="col-md-9">
       <strong><%= status.user.full_name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
          <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
          <span class="admin">
            | <%= link_to "Edit", edit_status_path(status) %> |
              <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>



  </div> 
