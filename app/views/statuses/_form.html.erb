<div class=" panel panel-success">
      <div class="panel-heading">
          <h3 class="panel-title">Enter your details to begin.</h3>
      </div>
        <div class="panel-body">
<%= simple_form_for(@status, html: {class: "col-md-9 col-md-offset-1"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, collection: User.all, label_method: :first_name %>
    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success btn-lg" %>
  </div>
<% end %>

</div>
      </div>
      
    </div>

