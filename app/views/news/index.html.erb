
  <div class="container">
    <div class="page-header">
      <h2>The stories so far...</h2>
      <div class="btn btn-success btn-lg"
      <%= link_to "What up?", new_news_path %>
    </div>
   <div class="row">
    <div class="col-md-8">
      <% @news.each do |news| %>
      <div class="news">
        <strong><%= news.title %></strong>
        <p><%= news.content %></p>
        <div class="meta">
          <%= link_to time_ago_in_words(news.created_at) + " ago", news %>
          <span class="admin">
            | <%= link_to "Edit", edit_news_path(news) %> |
            <%= link_to "Delete", news, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
          </span>
        </div>
      </div>

      <% end %>
     
    </div>

    <div class="col-md-2 col-md-offset-1">
      <div class="sidebar">
       <h4>About</h4>
       <p>Just a little reminder about who you're reading about</p>
      </div>

  </div>
