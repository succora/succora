<!DOCTYPE html>
<html>
<head>
  <title>Succora</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <a class="navbar-brand" href="/welcome/index">Succora</a>
      <ul class="nav navbar-nav">
          <li><%= link_to "News", news_index_path %></li>
          <li><%= link_to "Status", statuses_path %></li>
      </ul> 
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
              <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %>
                <% else %>
                <li><%= link_to "Sign In", new_user_session_path %></li>
            <% end %>
      </ul> 
    </div>
  </nav> 

  <div class="container">
    <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
    <% end %>
  </div>
  
       
            <%= yield %>




 
</body>
</html>
